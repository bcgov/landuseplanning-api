{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "creationTimestamp": null,
        "labels": {
            "app": "${NAME}-pipeline",
            "name": "${NAME}-pipeline",
            "template": "${NAME}-pipeline"
        },
        "name": "${NAME}-pipeline"
    },
    "objects": [
      {
        "kind": "BuildConfig",
        "apiVersion": "v1",
        "metadata": {
          "name": "${NAME}-pipeline",
          "creationTimestamp": null,
          "labels": {
            "app": "${NAME}"
          }
        },
        "spec": {
            "failedBuildsHistoryLimit": 5,
            "nodeSelector": {},
            "output": {},
            "postCommit": {},
            "resources": {},
            "runPolicy": "Serial",
            "source": {
                "git": {
                    "ref": "${GIT_REPO_BRANCH}",
                    "uri": "${GIT_REPO_URL}"
                },
                "type": "Git"
            },
            "strategy": {
                "jenkinsPipelineStrategy": {
                    "jenkinsfilePath": "${JENKINSFILE_PATH}"
                },
                "type": "JenkinsPipeline"
            },
            "successfulBuildsHistoryLimit": 5,
            "triggers": [
                {
                    "github": {
                        "secretReference": {
                            "name": "github-api"
                        }
                    },
                    "type": "GitHub"
                }
            ]
        }
      }
    ],
    "parameters": [
      {
        "name": "NAME",
        "displayName": "Name",
        "description": "The name assigned to all of the objects defined in this template.",
        "required": true,
        "value": "landuseplanning-api"
      },
      {
        "name": "GIT_REPO_URL",
        "displayName": "GIT Source Repo URL",
        "description": "A GIT URL to your source code.",
        "required": true,
        "value": "https://github.com/bcgov/gcpe-lup-api"
      },
      {
        "name": "GIT_REPO_BRANCH",
        "displayName": "Git Repo Branch",
        "description": "The branch with your GIT repo.",
        "required": true,
        "value": "dev"
      },
      {
        "name": "JENKINSFILE_PATH",
        "displayName": "Jenkinsfile path",
        "description": "Path to the Jenkinsfile in your GIT repo.",
        "required": true,
        "value": "Jenkinsfile"
      }
    ]
}