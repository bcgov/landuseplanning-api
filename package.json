{
  "name": "nrts-prc-api",
  "version": "1.0.7",
  "author": "Mark Lisé",
  "contributors": [
    "Mark Lisé <mark@digitalspace.ca>"
  ],
  "description": "ACRFD API",
  "keywords": [],
  "license": "Apache-2.0",
  "main": "app",
  "scripts": {
    "start": "node app",
    "test": "echo Test suite should be run with `npm run tests` or npm `run tests-ci`",
    "tests": "UPLOAD_DIRECTORY='./api/test/uploads/' jest api --runInBand",
    "tests-debug": "node --inspect node_modules/.bin/jest --runInBand",
    "coverage": "jest --collectCoverageFrom=api/**.js --coverage api",
    "lint": "eslint -c .eslintrc api/**/*.js --ignore-path .eslintignore",
    "lint-fix:1": "eslint -c .eslintrc api/**/*.js --ignore-path .eslintignore --fix",
    "lint-fix:2": "prettier api/**/*.js --write --loglevel warn",
    "lint-fix": "npm-run-all -l -s -c lint-fix:*"
  },
  "dependencies": {
    "@turf/helpers": "6.1.4",
    "@turf/turf": "5.1.6",
    "bcrypt-nodejs": "0.0.3",
    "biguint-format": "1.0.1",
    "body-parser": "1.18.3",
    "clamav.js": "0.12.0",
    "db-migrate": "0.11.5",
    "db-migrate-mongodb": "1.5.0",
    "epsg": "0.5.0",
    "express": "4.16.4",
    "flake-idgen": "1.1.2",
    "jsonwebtoken": "8.5.0",
    "jwks-rsa": "1.4.0",
    "mongoose": "5.4.17",
    "nconf": "0.10.0",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "proj4": "2.5.0",
    "qs": "6.6.0",
    "reproject": "1.2.3",
    "request": "2.88.0",
    "stream": "0.0.2",
    "swagger-tools": "0.10.4",
    "underscore": "1.9.1",
    "validator": "10.11.0",
    "wicket": "1.3.3",
    "winston": "3.2.1",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "database-cleaner": "1.3.0",
    "eslint": "5.15.3",
    "eslint-config-prettier": "4.1.0",
    "factory-girl": "5.0.4",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "lint-staged": "8.1.5",
    "mongodb-memory-server": "3.1.2",
    "nock": "10.0.6",
    "npm-run-all": "4.1.5",
    "prettier":" 1.16.4",
    "shelljs": "0.8.3",
    "supertest": "3.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint -c .eslintrc --ignore-path .eslintignore --fix",
      "prettier --write --loglevel warn",
      "git add"
    ]
  }
}
